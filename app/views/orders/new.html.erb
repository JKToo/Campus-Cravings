<div class="modal">
<div class="m-auto modal_card">
  <div style="text-align:center; margin-bottom: 20px">
<h2>Place your lunch order</h2>
</div>
<%= form_with model: @orders, url: order_path do |form| %>

  <div class="form-floating ">
    <%= form.text_field :restaurant, class: "form-control", id:"floatingInput", autofocus: true, autocomplete: "restaurant", placeholder: "Restaurant"%>
    <%= form.label :restaurant, 'Restaurant', for:"floatingInput", style: "display: block" %>
  </div>


    <div class="form-floating ">
    <%= form.text_field :address, class: "form-control", id:"floatingInput", placeholder: "Address"%>
    <%= form.label :address, 'Address', style: "display: block" %>
  </div>

  
  <div class="form-floating ">
    <%= form.text_area(:order, class: "modal-control form-control ", id:"floatingInput",  placeholder: "Order")%>
    <%= form.label :order, 'Order',  for:"floatingInput", style: "display: block" %>
  </div>

  <div  class="form-floating ">
     <%= form.number_field :total, class: "form-control", id:"floatingInput", placeholder: "Total"%>
    <%= form.label :total, 'Total', style: "display: block" %>
  </div>

  <div  class="form-floating ">
     <%= form.number_field :tip, class: "form-control", id:"floatingInput", placeholder: "Tip"%>
    <%= form.label :tip, 'Tip', style: "display: block" %>
  </div>

  <div>
    <%= form.number_field :profile_id, value: Current.profile.id, type: :hidden %>
    <%= form.number_field :school_id, value: Current.profile.school_id, type: :hidden %>
  </div>








  <div>
      <%= form.number_field :profile_id, value: Current.profile.id, type: :hidden %>
  </div>
  
  <div>
      <%= form.number_field :school_id, value: Current.profile.school_id, type: :hidden %>
  </div>

<%= link_to 'Cancel',  :back, data:{turbo:false}, class:" input-group-submit-invert" %>
    <%= form.submit "Place Order", data:{turbo:false}, class:" input-group-submit"%>

  
<% end %>

</div>
</div>