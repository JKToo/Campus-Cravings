<p style="color: green"><%= notice %></p>


<div class="profile_block">
  <div class="grid-container">
  <div class="item2">  
    <div class="item2_text1"  style="display:flex"> 
     @<%= Current.profile.tag%>

    <%@schoolname = School.find_by(id: Current.profile.school_id)%>
   <div class="school" >
    <%= @schoolname.name %>
    </div>  
    </div>  

<div class="item2_text2">
    <%=Current.profile.bio%>
    </div>
  </div>  
  <div class="name" >
      
    <%= Current.profile.fname %> 
    <%= Current.profile.lname %> 

    </div>
  <div class="item3">
    
  <%if Current.profile.avatar?%>
    <%= image_tag(Current.profile.avatar, class: "comment-avatar")%> 
  <%else%>
    <%= image_tag("https://static.vecteezy.com/system/resources/previews/020/911/747/non_2x/user-profile-icon-profile-avatar-user-icon-male-icon-face-icon-profile-icon-free-png.png", class: "comment-avatar")%> 
  <%end%>
  </div>  
  <div class="item5"> 

<div class="container status">
  <div class="row">
    <div class="col-sm " style="margin-left: 5%">
    ✍️ <%=Current.profile.posting.count%>  Reviews 
    </div>
    <div class="col-sm ">
     🚶 Student
    </div>
     <%if Current.profile.status%>
    <div class="col-sm">
     ✔️ Delivery Badge
    </div>
    <%end%>

  </div>
</div>
  </div>
</div>
  
  <%= link_to "Edit profile", edit_profile_path(Current.profile), class: "profile_edit_button" %>
  <%# <%= link_to "Back to profiles", profiles_path %> 


</div>
<%= turbo_frame_tag "about_turbo", class: "feed_post_rows"  do %>
    <%= render @profile_postings%>
<%end%>   

<%= turbo_frame_tag :pagination,
loading: :lazy,
src: about_path(format: :turbo_stream) , class: "feed_post_rows" %>

