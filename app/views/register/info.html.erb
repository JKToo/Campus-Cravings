<%= form_with(model: profile) do |form| %>
  <% if profile.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
        <% profile.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name %>
  </div>

  <div>
    <%= form.label :last_name, style: "display: block" %>
    <%= form.text_field :last_name %>
  </div>

  <div>
    <%= form.label :tag, style: "display: block" %>
    <%= form.text_field :tag %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, placeholder:"name@email.com" %>
  </div>

  <div>
    <%= form.label :school, style: "display: block" %>
    <%= form.text_field :school, placeholder:"School" %>
  </div>

  <div>
    <%= form.label :delivery, style: "display: block" %>
    <%= form.check_box :delivery %>
  </div>

  <div>
    <%= form.label :user_id, id: :profile_user_id, style: "display: block" %>
    <%= form.number_field :user_id, value: Current.user.id, type: :hidden %>
  </div>
  <div>
    <%= form.submit %>
  </div>

<% end %>
