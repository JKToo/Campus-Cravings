<div id="<%= dom_id profile %>">




<p style="color: green"><%= notice %></p>


<div class="profile_block">
  <div class="grid-container">
  <div class="item2">  
    <div class="item2_text1"> 
     @<%= profile.tag%>
    </div>  
    <div class="item2_text2">
      <%@schoolname = School.find_by(id: profile.school_id)%>
    <%= @schoolname.name %>
    </div>

  </div>  
  <div class="item3">
    <img class="item3_img" src="https://mrwallpaper.com/images/thumbnail/cool-smiley-profile-picture-6lqzc2aegkuxbini.jpg">
  </div>  
  <div class="item4"></div>
  <div class="item5"> 

<div class="container status">
  <div class="row">
    <div class="col-sm " style="margin-left: 5%">
    ✍️ <%=profile.posting.count%>  Reviews 
    </div>
    <div class="col-sm ">
     🚶 Student
    </div>
     <%if profile.status%>
    <div class="col-sm">
     ✔️ Delivery Badge
    </div>
    <%end%>

  </div>
</div>
  </div>
</div>
  


</div>
<%= turbo_frame_tag "profile_turbo", class: "feed_post_rows"  do %>
    <%= render @poster%>
<%end%>   

<%= turbo_frame_tag :pagination,
loading: :lazy,
src: profile_path(format: :turbo_stream) , class: "feed_post_rows" %>




</div>
