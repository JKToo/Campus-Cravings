<%= form_with(model: profile) do |form| %>
  <% if profile.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
        <% profile.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :fname, 'First Name', style: "display: block" %>
    <%= form.text_field :fname %>
  </div>

  <div>
    <%= form.label :lname, 'Last Name', style: "display: block" %>
    <%= form.text_field :lname %>
  </div>

  <div>
    <%= form.label :tag, 'Display', style: "display: block" %>
    <%= form.text_field :tag %>
  </div>

  <div>
    <%= form.label :school_id, 'School', style: "display: block" %>

     <%= form.collection_select :school_id, School.order(:name),:id,:name, include_blank: true, value: :school_id%>

  </div>

  <div>
    <%= form.label :status, 'Distributor', style: "display: block" %>
    <%= form.check_box :status %>
  </div>
 <div>
    <%= form.number_field :user_id, value: Current.user.id, type: :hidden %>
  </div>
  
  <div>
    <%= form.submit data:{turbo:false} %>

  </div>
<% end %>
